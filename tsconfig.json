{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "nodenext",
    "lib": ["dom", "es2023"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tmp",
    "test",
    "release",
    ".erb/dll",
    "ios",
    "android"
  ]
}
